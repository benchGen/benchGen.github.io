# frozen_string_literal: true

source "https://rubygems.org"

# (Optional) lock Ruby version if you want: change to the version you use
# ruby "3.1.0"

# Use the GitHub Pages gem so your local environment matches what GitHub Pages uses.
# This also includes the jekyll-remote-theme plugin and common page-related plugins.
gem "github-pages", group: :jekyll_plugins

# Minimal theme is a remote theme; jekyll-remote-theme is required to fetch it.
# github-pages normally supplies this, but having it explicitly here is harmless.
gem "jekyll-remote-theme"

# If you want to preview drafts or use livereload locally you can add these:
# gem "webrick" # for older Ruby/Jekyll combinations that need it for `jekyll serve`
# gem "jekyll-livereload"

